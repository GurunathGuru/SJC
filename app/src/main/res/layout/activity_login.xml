<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="4"
    tools:context=".LoginActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:elevation="3sp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="5sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/faculty" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvFaculty"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5E7E7E7E"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center"
                android:text="FACULTY LOGIN"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:elevation="3sp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="5sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/students" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvStudent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5E7E7E7E"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center"
                android:text="STUDENT LOGIN"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:elevation="3sp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="5sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvParent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5E7E7E7E"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center"
                android:text="PARENT LOGIN"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_margin="5sp"
        android:layout_weight="1"
        android:elevation="3sp"
        app:cardBackgroundColor="@color/colorYellow"
        app:cardCornerRadius="5sp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/admission" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/tvAdmission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#5E7E7E7E"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center"
                android:text="ADMISSION LOGIN"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>