<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.github.demono.AutoScrollViewPager
            android:id="@+id/av_imageView"
            android:layout_width="match_parent"
            android:layout_height="300sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250sp"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center|end"
                    android:text="ST. JOSEPH COLLEGE"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center|end"
                    android:text="AUTONOMOUS"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageView
                android:layout_width="0sp"
                android:layout_height="100sp"
                android:layout_weight="0.5"
                android:padding="15sp"
                android:src="@drawable/sjclogo1" />
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="225sp"
            android:background="@drawable/backgg4"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="10sp"
            android:orientation="vertical"
            android:weightSum="3.5">

            <View
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="2.05"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tv_OurCourses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center|start"
                            android:paddingLeft="10sp"
                            android:text="OUR"
                            android:textColor="@color/black"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tv_OurCourses1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center|start"
                            android:paddingLeft="10sp"
                            android:text="COURSES"
                            android:textColor="@color/black"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="0.95"
                        android:background="@drawable/border_white"
                        android:orientation="horizontal"
                        android:padding="2sp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/colorYellow">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/tv_Announcements"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center"
                                    android:text="ANNOUNCEMENTS"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_AboutSjc"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_yellow"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:text="ABOUT SJC"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvLogin"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_yellow"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:text="LOGIN"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvPlacement"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_yellow"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:text="PLACEMENTS"
                                android:textColor="@color/black"
                                android:textSize="16sp" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                app:cardBackgroundColor="@color/colorWhite"
                app:contentPadding="2sp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorYellow"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center"
                    android:text="WELCOME TO SJC MOBILE APP"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5sp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvScholarships"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_white"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="SCHOLARSHIP"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="5sp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvOnlineClasses"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_white"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="ONLINE CLASS"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_gravity="center"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/tvSchool"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/border_white"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="SCHOOL\u0026INSTITUTES"
                            android:textColor="@color/colorWhite"
                            android:textSize="16sp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RelativeLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:gravity="center|start">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="40sp"
                                android:background="@drawable/border_white"
                                android:padding="18sp" />

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:weightSum="2.5">

                                <com.github.demono.AutoScrollViewPager
                                    android:id="@+id/vpNews"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="bottom|start"
                                    android:paddingLeft="10sp"
                                    android:paddingBottom="10sp"
                                    android:text="NEWS"
                                    android:textColor="@color/colorYellow"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>