<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.potyvideo.library.AndExoPlayerView
            android:id="@+id/videoview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:andexo_aspect_ratio="aspect_16_9"
            app:andexo_full_screen="false"
            app:andexo_play_when_ready="true"
            app:andexo_resize_mode="Fit"
            app:andexo_show_controller="true" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="200sp"
            android:background="@drawable/backgg2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:weightSum="3"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginLeft="10sp"
                            android:paddingBottom="30sp"
                            android:layout_marginRight="10sp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:paddingBottom="18sp"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|end"
                                    android:text="ST. JOSEPH COLLEGE"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="30sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|end"
                                    android:text="AUTONOMOUS"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:padding="15sp"
                                android:src="@drawable/sjclogo1" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="1.5"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="3.5">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1.5"
                            android:layout_marginRight="10sp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="2">

                            <TextView
                                android:id="@+id/tv_OurCourses"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center|start"
                                android:paddingLeft="15sp"
                                android:text="OUR"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/tv_OurCourses1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center|start"
                                android:paddingLeft="15sp"
                                android:textColor="@color/black"
                                android:text="COURSES"
                                android:textSize="23sp" />

                        </LinearLayout>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5sp"
                            android:layout_marginBottom="10sp"
                            android:layout_weight="1"
                            app:contentPaddingLeft="3sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_white"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:text="SCHOLARSHIP"
                                android:textColor="@color/colorWhite"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_gravity="center"
                            android:layout_marginRight="5sp"
                            android:layout_weight="1"
                            app:contentPaddingLeft="3sp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/border_white"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:text="ONLINE CLASS"
                                android:textColor="@color/colorWhite"
                                android:textSize="18sp" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0sp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingLeft="25sp">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_AboutSjc"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_yellow"
                                        android:fontFamily="@font/ebgaramond_regular"
                                        android:gravity="center"
                                        android:text="ABOUT SJC"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:fontFamily="@font/ebgaramond_regular"
                                        android:gravity="center"
                                        android:text="LOGIN"
                                        android:background="@drawable/border_yellow"
                                        android:textSize="18sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center|start">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginTop="5sp">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="40sp"
                                        android:background="@drawable/border_white"
                                        android:padding="18sp" />

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="2.5">

                                        <com.github.demono.AutoScrollViewPager
                                            android:id="@+id/vpNews"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />
                                    </LinearLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_margin="10sp"
                    app:contentPadding="2sp"
                    android:layout_weight="0.5"
                    android:elevation="5dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <TextView
                            android:id="@+id/tvPlacement"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="SCHOOL \u0026 INSTITUTES"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="1sp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5sp"
                            android:layout_marginBottom="5sp"
                            android:background="@color/colorYellow" />

                        <TextView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="PLACEMENTS"
                            android:textSize="18sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>