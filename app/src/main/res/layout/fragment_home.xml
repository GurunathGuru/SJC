<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="3"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.potyvideo.library.AndExoPlayerView
            android:id="@+id/au_imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:andexo_aspect_ratio="aspect_16_9"
            app:andexo_full_screen="false"
            android:visibility="gone"
            app:andexo_play_when_ready="true"
            app:andexo_resize_mode="Fit"
            app:andexo_show_controller="true" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/coverphoto"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="205sp"
            android:scaleType="centerCrop"
            android:background="@drawable/backgg2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="3">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="0.9">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="bottom"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="150sp"
                            android:layout_marginLeft="10sp"
                            android:layout_marginRight="10sp"
                            android:orientation="horizontal"
                            android:paddingBottom="30sp"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:paddingBottom="18sp"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|end"
                                    android:visibility="gone"
                                    android:text="ST. JOSEPH COLLEGE"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="20sp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|end"
                                    android:text="AUTONOMOUS"
                                    android:visibility="gone"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="18sp" />
                            </LinearLayout>

                            <ImageView
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_weight="0.5"
                                android:padding="15sp"
                                android:visibility="gone"
                                android:src="@drawable/sjclogo1" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginRight="10sp"
                    android:layout_weight="2.1"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1.25"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10sp"
                            android:layout_weight="0.9"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="2.05"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <TextView
                                    android:id="@+id/tv_OurCourses"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|start"
                                    android:paddingLeft="10sp"
                                    android:textColor="@color/black"
                                    android:text="OUR"
                                    android:textSize="16sp" />

                                <TextView
                                    android:id="@+id/tv_OurCourses1"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center|start"
                                    android:paddingLeft="10sp"
                                    android:text="COURSES"
                                    android:textColor="@color/black"
                                    android:textSize="20sp" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_weight="0.95"
                                android:layout_marginBottom="10sp"
                                android:background="@drawable/border_white"
                                android:orientation="horizontal"
                                android:padding="2sp">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    app:cardBackgroundColor="@color/colorYellow">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="horizontal"
                                        android:weightSum="2">

                                        <TextView
                                            android:id="@+id/tv_Announcements"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/ebgaramond_regular"
                                            android:gravity="center"
                                            android:text="ANNOUNCEMENTS"
                                            android:textColor="@color/colorWhite"
                                            android:textSize="16sp" />
                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.1"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:weightSum="3">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tv_AboutSjc"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_yellow"
                                        android:fontFamily="@font/ebgaramond_regular"
                                        android:gravity="center"
                                        android:text="ABOUT SJC"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_yellow"
                                        android:fontFamily="@font/ebgaramond_regular"
                                        android:gravity="center"
                                        android:text="LOGIN"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="10sp"
                                android:layout_weight="1">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPlacement"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@drawable/border_yellow"
                                        android:fontFamily="@font/ebgaramond_regular"
                                        android:gravity="center"
                                        android:text="PLACEMENTS"
                                        android:textSize="16sp" />
                                </LinearLayout>
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.5"
                        android:background="@drawable/border_white"
                        android:orientation="horizontal"
                        android:padding="2sp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            app:cardBackgroundColor="@color/colorYellow">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="horizontal"
                                android:weightSum="2">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center"
                                    android:text="WELCOME TO SJC MOBILE APP"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="20sp" />
                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10sp"
                        android:layout_weight="1.25"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        
                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginRight="5sp"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/border_white"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center"
                                    android:text="SCHOLARSHIP"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_marginBottom="5sp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/border_white"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center"
                                    android:text="ONLINE CLASS"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="0sp"
                                android:layout_gravity="center"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/border_white"
                                    android:fontFamily="@font/ebgaramond_regular"
                                    android:gravity="center"
                                    android:text="SCHOOL\u0026INSTITUTES"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="16sp" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5sp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="0sp"
                                android:layout_height="match_parent"
                                android:layout_weight="2"
                                android:gravity="center|start">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="40sp"
                                        android:background="@drawable/border_white"
                                        android:padding="18sp" />

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:weightSum="2.5">

                                        <com.github.demono.AutoScrollViewPager
                                            android:id="@+id/vpNews"
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent" />

                                        <TextView
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:fontFamily="@font/ebgaramond_regular"
                                            android:gravity="bottom|start"
                                            android:paddingBottom="10sp"
                                            android:paddingLeft="10sp"
                                            android:text="NEWS"
                                            android:textColor="@color/colorYellow"
                                            android:textSize="16sp"
                                            android:textStyle="bold"/>
                                    </RelativeLayout>
                                </RelativeLayout>
                            </RelativeLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>