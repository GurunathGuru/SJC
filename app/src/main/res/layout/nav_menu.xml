<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:scaleType="centerCrop"
        android:src="@drawable/students" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2"
        android:orientation="vertical"
        android:weightSum="7.5">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:onClick="principalMessage"
            android:layout_margin="5sp"
            android:layout_weight="1.5"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardCornerRadius="5sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <ImageView
                    android:id="@+id/president_img"
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5"
                    android:padding="10sp"
                    android:src="@drawable/sjclogo1" />

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:weightSum="2"
                    android:gravity="center|start"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.75"
                        android:gravity="center|start"
                        android:paddingLeft="10sp"
                        android:fontFamily="@font/ebgaramond_regular"
                        android:text="Fr.Dr. Victor Lobo, SJ,"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="20sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:paddingLeft="10sp"
                        android:fontFamily="@font/ebgaramond_regular"
                        android:text="Principal"
                        android:textColor="@color/colorWhite"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.5"
                        android:gravity="end|bottom"
                        android:paddingRight="10sp"
                        android:fontFamily="@font/ebgaramond_regular"
                        android:layout_toRightOf="@+id/president_img"
                        android:text="View Message..!"
                        android:textColor="@color/colorWhite" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_department"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="Departmental NewsLetters"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/fac"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="Facilities"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tvGallery"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="Gallery"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:background="@color/colorPrimary" />

        <TextView
            android:id="@+id/tv_contactus"
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center|start"
            android:paddingLeft="10sp"
            android:text="Contact Us"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            android:layout_marginBottom="5sp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/btnVIP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center|start"
                android:paddingLeft="10sp"
                android:text="Staff Login"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center|start"
                android:paddingLeft="10sp"
                android:text="Logout"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"
                android:visibility="gone" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="30sp"
            android:background="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5sp">

                <ImageView
                    android:id="@+id/iv_call"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/call" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5sp"
                android:layout_marginTop="5sp"
                android:layout_marginBottom="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5sp">

                <ImageView
                    android:id="@+id/iv_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/facebook" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_margin="5sp"
                android:layout_weight="1"
                app:cardBackgroundColor="@color/colorWhite"
                app:cardCornerRadius="5sp">

                <ImageView
                    android:id="@+id/iv_mail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/mail" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
