<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvDepart"
        android:layout_width="match_parent"
        android:layout_height="200sp"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_ivOurCoursesImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="10dp"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="start|center"
                android:scaleType="centerCrop"
                android:textAppearance="@style/CustomTextAppearance"
                android:textColor="@color/cardview_dark_background"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_OurCoursesTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/ebgaramond_regular"
                android:gravity="center|bottom|start"
                android:paddingLeft="10sp"
                android:paddingBottom="10sp"
                android:text="Title"
                android:textAppearance="@style/CustomTextAppearance"
                android:textSize="15sp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>