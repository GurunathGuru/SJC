<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3.5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="2.2"
        android:background="@color/colorWhite"
        android:orientation="vertical"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0sp"
                android:layout_weight="0.5"
                android:background="@color/colorWhite"
                android:orientation="horizontal"
                android:weightSum="2"
                tools:ignore="NestedWeights">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="UselessParent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="0.3"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:textColor="@color/colorWhite" />

                        <View
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@color/colorYellow"
                            android:gravity="center"
                            android:textColor="@color/colorWhite" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="15sp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <ImageView
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.75"
                            android:gravity="center"
                            android:src="@drawable/sjclogo1" />

                        <TextView
                            android:id="@+id/tvEvents"
                            android:layout_width="0sp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/border_white"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:onClick="events"
                            android:text="UPCOMING EVENTS"
                            android:textColor="@color/colorWhite"
                            android:textSize="18sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0sp"
            android:layout_weight="1.5"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:weightSum="2">

                <View
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.14"
                    android:background="@color/colorPrimary" />

                <RelativeLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.86">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:weightSum="2">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_marginLeft="11dp"
                            android:layout_marginRight="15dp"
                            android:layout_weight="1"
                            android:background="@color/colorYellow" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1.86"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="22dp"
                            android:layout_weight="2"
                            android:background="@color/colorYellow"
                            android:padding="5sp">

                            <com.github.demono.AutoScrollViewPager
                                android:id="@+id/vpAlumni"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/colorYellow"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:onClick="alumni"
                                android:text="DISTINGUISHED ALUMNUS"
                                android:textColor="@color/colorPrimary"
                                android:textSize="18sp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginRight="15dp"
                                android:background="@color/colorYellow"
                                android:fontFamily="@font/ebgaramond_regular"
                                android:gravity="center"
                                android:onClick="alumni"
                                android:text="Click Here"
                                android:textColor="@color/design_default_color_error"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="01"
                android:background="@color/colorPrimary"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.875"
                    android:background="@color/colorYellow"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <TextView
                        android:id="@+id/tvOutReach"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5"
                        android:fontFamily="@font/ebgaramond_regular"
                        android:gravity="center"
                        android:text="OUT REACH"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="2.5"
                        android:onClick="gratitude"
                        android:background="@color/colorWhite"
                        android:orientation="vertical"
                        android:weightSum="3.5">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="center"
                            android:text="OUR GRATITUDE"
                            android:textColor="@color/design_default_color_on_secondary"
                            android:textSize="15sp" />

                        <com.github.demono.AutoScrollViewPager
                            android:id="@+id/vpGratitude"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:onClick="gratitude"
                            android:layout_marginRight="2sp"
                            android:layout_weight="1.70" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="0.5"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="start|center"
                            android:maxLines="1"
                            android:text="@string/title"
                            android:textColor="@color/colorPrimary"
                            android:textSize="18sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            android:layout_marginRight="10sp"
                            android:background="@color/colorPrimary" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="0.65"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="start"
                            android:maxLines="3"
                            android:text="@string/description"
                            android:textColor="#000"
                            android:textSize="15sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tvReadMore"
                            android:layout_width="match_parent"
                            android:layout_height="0sp"
                            android:layout_weight="0.80"
                            android:fontFamily="@font/ebgaramond_regular"
                            android:gravity="end|center"
                            android:paddingRight="10sp"
                            android:text="Read more..!"
                            android:textColor="#5A5A5A"
                            android:textSize="20sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0sp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.125"
                    android:orientation="vertical"
                    android:weightSum="3">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.5"
                        android:background="@color/colorYellow" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="0.2"
                        android:background="@color/colorWhite" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0sp"
                        android:layout_weight="1.5"
                        android:background="@color/colorPrimary" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="0.3"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tvResearch"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center"
            android:text="RESEARCH"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

        <View
            android:layout_width="5sp"
            android:layout_height="match_parent"
            android:layout_marginTop="10sp"
            android:layout_marginBottom="10sp"
            android:background="@color/colorWhite" />

        <TextView
            android:id="@+id/tvAssociations"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/ebgaramond_regular"
            android:gravity="center"
            android:text="ASSOCIATIONS"
            android:textColor="@color/colorWhite"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:orientation="horizontal"
        android:paddingLeft="15sp"
        android:paddingRight="15sp"
        android:paddingBottom="15sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="15sp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/tvStudentUnion"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginBottom="7.5sp"
                    android:layout_weight="1"
                    android:background="@color/colorYellow"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center"
                    android:text="STUDENT UNION"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tvAchievements"
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_marginTop="7.5sp"
                    android:layout_weight="1"
                    android:background="@color/colorPrimary"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center"
                    android:text="ACHIEVEMENTS"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </LinearLayout>

            <View
                android:layout_width="5sp"
                android:layout_height="match_parent"
                android:layout_marginTop="10sp"
                android:layout_marginBottom="10sp"
                android:background="@color/colorPrimary" />

            <LinearLayout
                android:id="@+id/llSupport"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="15sp"
                android:weightSum="2">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0sp"
                    android:layout_weight="1.25"
                    android:padding="25sp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/donate" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ebgaramond_regular"
                    android:gravity="center"
                    android:text="SUPPORT FOR A CAUSE"
                    android:textColor="@color/colorPrimary"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>